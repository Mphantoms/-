<view class='container'>
  <view class='top'>
    <view class='one_list'>
      <view class='change'>
        <view class=''>警号：</view>
        <view>
          <input disabled value='{{nowPass}}' maxlength='20'></input>
        </view>
      </view>
      <view class='x' data-index='1' bindtap='clearThis'>✖</view>
    </view>
    <view class='x_line'></view>
    <view class='one_list'>
      <view class='change'>
        <view class=''>旧密码：</view>
        <view>
          <input placeholder="请输入原始密码" bindinput='changnew' type='password' value='{{newPass}}' maxlength='20'></input>
        </view>
      </view>
      <view class='x' data-index='2' bindtap='clearThis'>✖</view>
    </view>
    <view class='x_line'></view>
    <view class='one_list'>
      <view class='change'>
        <view class=''>新密码：</view>
        <view>
          <input placeholder="请输入新密码" bindinput='changnew3' type='password' value='{{newPass1}}' maxlength='20'></input>
        </view>
      </view>
      <view class='x' data-index='4' bindtap='clearThis'>✖</view>
    </view>
    <view class='x_line'></view>
    <view class='one_list'>
      <view class='change'>
        <view class=''>确认密码：</view>
        <view>
          <input placeholder="请再次输入新密码" bindinput='changnew2' type='password' value='{{lastPass}}' maxlength='20'></input>
        </view>
      </view>
      <view class='x' data-index='3' bindtap='clearThis'>✖</view>
    </view>
  </view>
  <view class='btn' bindtap='toServer'>确定</view>
  <!--<view class='btn btn2' bindtap='cancel'>退出</view>-->
</view>
